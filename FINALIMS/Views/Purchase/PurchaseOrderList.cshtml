@model IEnumerable<FINALIMS.Models.Extended.PurchaseOrder>

<title>Purchase Order List</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" id="dataTable">
        <thead>
            <tr>
                <th>
                    Purchase ID
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Discount Price
                </th>
                <th>
                    Final Total
                </th>
                <th>
                    Product Total
                </th>
                <th>
                    Product ID
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Total
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                       @item.PurchaseOrderDetail.PurchaseID
                    </td>
                    <td>
                        @item.ProductPurchaseDetail.Product_name
                    </td>
                    <td>
                        @item.PurchaseOrderDetail.Discount
                    </td>
                    <td>
                        @item.PurchaseOrderDetail.SubTotal
                    </td>
                    <td>
                        
                        @item.PurchaseOrderDetail.Total
                    </td>
                    <td>
                      @item.ProductPurchaseDetail.product_id
                    </td>
                    <td>
                        @item.ProductPurchaseDetail.Quantity
                    </td>
                    <td>
                        @item.ProductPurchaseDetail.Item_Total
                    </td>
                    @*<td>
                        <a href="@Url.Action("Edit",new {id = item.ProductID})" class="btn btn-success">Edit </a>
                        <a href="@Url.Action("Delete",new {id = item.ProductID})" class="btn btn-danger"> Delete </a>
                    </td>*@
                </tr>
            }
        </tbody>


    </table>
    <div>
        @Html.ActionLink("Back to List", "Dashboard", "Home")
    </div>
    @section scripts{
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"
                integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
                crossorigin="anonymous">

        </script>


        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

        <script type="text/javascript">
            $(document).ready(function () {
                $('#dataTable').DataTable();
            });
        </script>


    }
</body>
